<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uvjetikoristenja"
    android:background="@color/svjetlo_plava">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:onClick="BackButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_24px" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">




        <TextView
            android:id="@+id/user_name"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView24"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="134dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="20dp"
            android:text="GoPlay"
            android:textColor="@color/plava_home"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView25"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="4dp"
            android:text="Plaćanja putem GoPlay platforme neće se vratiti ni iz bilo kojeg razloga, uključujući ne kupnju ili ne korištenje proizvoda, usluga i događanja."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView27"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="5dp"
            android:text="Razumijete i prihvaćate da uporaba GoPlay zahtijeva internetsku povezanost i telekomunikacijske veze.  Snosit ćete troškove nastale zbog pristupa i korištenja, a ni pod kojim uvjetima nećemo biti odgovorni za takve troškove."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView29"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="111dp"
            android:text="Ako Davatelj usluge izmijeni ili povuče bilo koj uslugu, mjesto ili teren, a isti se ne ažurira na GoPlay platformi u vrijeme kada korisnik koristi tu uslugu,
tada će pružatelj usluge osigurati zamjenu terena s jednakom ponudom ili za povrat novca koji je primio od korisnika."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_above="@+id/textView22"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:text="Opći uvjeti korištenja GoPlay mobilne aplikacije"
            android:textAlignment="viewStart"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView28"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="7dp"
            android:text="Razumijete i suglasni ste da upotreba moblinih usluga ne uključuje pružanje računala ili mobilnog uređaja ili druge potrebne opreme za pristup."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView26"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="1dp"
            android:text="GoPlay zadržava pravo izmjene sadržaja mobilne aplikacije na bilo koji način, u bilo kojem trenutku i iz bilo kojeg razloga, i neće biti odgovoran ni za kakve moguće posljedice proizašle iz takvih promjena."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="62dp"
            android:text="GoPlay zadržava pravo izmjene ovih uvjeta korištenja."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>