<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uvjetikoristenja">


    <TextView
        android:id="@+id/user_name"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="92dp"
        android:text="GoPlay"
        android:textColor="@color/plava_home"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView25"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="4dp"
            android:text="Plaćanja putem GoPlay platforme neće se vratiti ni iz bilo kojeg razloga, uključujući ne kupnju ili ne korištenje proizvoda, usluga i događanja."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView27"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:text="Razumijete i prihvaćate da uporaba GoPlay zahtijeva internetsku povezanost i telekomunikacijske veze.  Snosit ćete troškove nastale zbog pristupa i korištenja, a ni pod kojim uvjetima nećemo biti odgovorni za takve troškove."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView26"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView29"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Ako Davatelj usluge izmijeni ili povuče bilo koj uslugu, mjesto ili teren, a isti se ne ažurira na GoPlay platformi u vrijeme kada korisnik koristi tu uslugu,
tada će pružatelj usluge osigurati zamjenu terena s jednakom ponudom ili za povrat novca koji je primio od korisnika."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_above="@+id/textView22"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Opći uvjeti korištenja GoPlay mobilne aplikacije"
        android:textAlignment="viewStart"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="260dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Razumijete i suglasni ste da upotreba moblinih usluga ne uključuje pružanje računala ili mobilnog uređaja ili druge potrebne opreme za pristup."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView26"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:text="GoPlay zadržava pravo izmjene sadržaja mobilne aplikacije na bilo koji način, u bilo kojem trenutku i iz bilo kojeg razloga, i neće biti odgovoran ni za kakve moguće posljedice proizašle iz takvih promjena."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        tools:layout_editor_absoluteX="-14dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="GoPlay zadržava pravo izmjene ovih uvjeta korištenja."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="152dp" />

    <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="683dp"
            android:onClick="BackButton1"
            app:srcCompat="@drawable/ic_arrow_back_24px" />



</androidx.constraintlayout.widget.ConstraintLayout>