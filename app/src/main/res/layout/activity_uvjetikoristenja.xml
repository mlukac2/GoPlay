        android:layout_marginTop="376dp"
        android:layout_marginEnd="4dp"
        android:text="GoPlay zadržava pravo izmjene sadržaja mobilne aplikacije na bilo koji način, u bilo kojem trenutku i iz bilo kojeg razloga, i neće biti odgovoran ni za kakve moguće posljedice proizašle iz takvih promjena."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="342dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
