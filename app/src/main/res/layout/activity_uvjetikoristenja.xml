<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uvjetikoristenja">


    <TextView
        android:id="@+id/user_name"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="35dp"
        android:text="GoPlay"
        android:textColor="@color/plava_home"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="347dp"
        android:layout_height="62dp"
        android:layout_above="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:text="Plaćanja putem GoPlay platforme neće se vratiti ni iz bilo kojeg razloga, uključujući ne kupnju ili ne korištenje proizvoda, usluga i događanja."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="348dp"
        android:layout_height="124dp"
        android:layout_above="@+id/textView27"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
