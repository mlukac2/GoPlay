<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sport_text"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text=", Vaterpolo"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lokacija_text"
        app:layout_constraintTop_toBottomOf="@+id/cijena_text" />

    <TextView
        android:id="@+id/datum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="28dp"
        android:text="datum"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kreator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/kreator_slika"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lokacija_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Grad,igraliste"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/kreator_slika"
        app:layout_constraintTop_toBottomOf="@+id/kreator_text" />

    <TextView
        android:id="@+id/cijena_text"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="76dp"
        android:text="10000/10000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/kreator_text"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kreator_slika"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datum_text"
        app:srcCompat="@android:drawable/btn_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>