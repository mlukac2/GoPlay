<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="408dp"
    android:layout_height="160dp"
    android:layout_marginStart="1dp"
    android:background="@color/plava_card"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sport_text"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/rounded_home_boja"
        android:gravity="center"
        android:text="Vaterpolo"
        android:textAllCaps="false"
        android:textColor="@color/bijela"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kreator_slika" />

    <TextView
        android:id="@+id/datum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="datum"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/lokacija_text"
        app:layout_constraintEnd_toEndOf="@+id/sport_text"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kreator_text"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/kreator_text"
        android:layout_width="130dp"
        android:layout_height="29dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sport_text"
        app:layout_constraintEnd_toStartOf="@+id/cijena_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/kreator_slika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/lokacija_text"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="8dp"
        android:text="Grad,igraliste"
        android:textSize="18sp"
        android:textColor="@color/text_color_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/brBrisanje"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984" />

    <TextView
        android:id="@+id/cijena_text"
        android:layout_width="101dp"
        android:layout_height="31dp"
        android:layout_marginEnd="68dp"
        android:drawableLeft="@drawable/ic_payment_24px"
        android:gravity="left|center_vertical"
        android:text="10/10 KN"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/kreator_slika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/kreator_slika"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerInside"
        app:civ_border_color="@color/bijela"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/dark_blue"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toTopOf="@+id/datum_text"
        app:layout_constraintEnd_toStartOf="@+id/indCijena"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/brSudionika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_people_24px"
        android:gravity="left|center_vertical"
        android:text="sudionici"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indCijena"
        app:layout_constraintVertical_bias="0.941" />

    <TextView
        android:id="@+id/brBrisanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:drawableLeft="@drawable/ic_delete_24px"
        android:gravity="left|center_vertical"
        android:text="bisanje"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/brSudionika"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_text"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/indCijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_euro_24px"
        android:gravity="left|center_vertical"
        android:text="indCijena"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cijena_text"
        app:layout_constraintVertical_bias="0.258" />

</androidx.constraintlayout.widget.ConstraintLayout>